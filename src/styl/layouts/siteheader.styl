.site-header
  display flex
  flex-wrap wrap
  text-transform uppercase
  background-color #2BF5BE
  color #fff
  padding: 2rem 0.8rem 0.5rem
  font-weight bold
  width 100%



  > *
    flex 1 1 100%

  hr
    margin 2rem auto
    display block
    flex 0 1 80%
    border none
    height 0
    border-top 0.1rem solid #fff
    border-bottom 0.1rem solid #fff

    position relative
    // background-image linear-gradient(#2BF5BE, #1CDE86, #1FFB70)
    overflow visible

    &:after
      text-align center
      position relative
      content: "</>"
      top -15px
      font-size 1.5rem
      background-color #2BF5BE
      padding 0 10px
      // display block
      // background-image linear-gradient(#2BF5BE, #1CDE86, #1FFB70)
      margin-bottom -20px


  h2
    font-size 1rem